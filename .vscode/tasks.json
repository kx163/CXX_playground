{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake_build_all",
            "type": "shell",
            "command": "mkdir -p ${workspaceFolder}/build && cd ${workspaceFolder}/build && cmake .. && make all"
        },
        {
            "label": "run_play",
            "type": "shell",
            "command": "${workspaceFolder}/build/eigen/play",
            "dependsOn": "cmake_build_all",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "run_eigen_matrix",
            "type": "shell",
            "command": "${workspaceFolder}/build/slambook/ch6/ceres_dk ${workspaceFolder}/data/slambook/ch6/runs.csv",
            "dependsOn": "cmake_build_all",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}